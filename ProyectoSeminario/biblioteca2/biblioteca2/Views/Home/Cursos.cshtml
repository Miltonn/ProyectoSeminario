@{
    ViewBag.Title = "Cursos";
}

<h2>Cursos</h2>
<p class="tit">Ultimas 10 publicaciones de CURSOS </p>
<div class="tipo">
    <p class="cat">Categorias</p>
    @foreach (var t in ViewBag.tipo)
    {
    <div class="tipo1">
        <a href="">@t.tipo   </a>
    </div>
    }
</div>
<div class="div1">
    <div class="div2">
        <div class="vista">
        @foreach (var item in @ViewBag.lib)
        {
           <div style="float:left;">
                @{string img1 = "~/Content/Imagenes/" + @item.avatar;}<img src="@Url.Content(img1)" width="100" height="100"/><br>
                 Publicado por:<br/>
                 Nombre:   @item.nombre<br/>
                 Apellido: @item.apellido
           </div>
            <div class="div3">
                <div class="div4"><p><a id="menu1"href="http://localhost:4391/Home/detallecurso/@item.idpublicacion">@item.titulo</a></p>
                </div>
                
                <div class="des">
                    <div class="u">@item.descripcion</div>
                </div>
                <div>
                    @{string img3 = "~/Content/Imagenes/estrella.jpg";}<img src="@Url.Content(img3)" width="30" height="30" /> @item.puntaje
                </div>
            </div>
            
        }
        </div> 
    </div>   
    <div class="div6">
        @foreach (var ite in @ViewBag.lib)
        {
            <div class="div7">
            <div>
                <div class="g">@{string img = "~/Content/Imagenes/" + @ite.portada;}<img src="@Url.Content(img)" width="100" height="100"/></div>
                <div class="g">
                    <div class="t">@ite.titulo</div><br>
                    <div>@ite.descripcion</div>
                </div>
            </div>
            </div>
        }
    </div>
</div>
