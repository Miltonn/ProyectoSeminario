@model biblioteca2.Models.RegisterModel
@{
    ViewBag.Title = "Home Page";
}

<h2>@ViewBag.Message</h2>
<h2>@TempData["Message"]</h2>


<p class="menu1">ULTIMAS 10 PUBLICACIONES DE LIBROS</p>
<div class="tipo" style="overflow:scroll;height:500px;">
    <p class="cat">Categorias</p>
    @foreach (var t in ViewBag.tipo)
    {
    <div class="tipo1">
        <a href="">@t.tipo   </a>
    </div>
    }
</div>
<div class="div1">
    <div class="div2">
        <div class="vista">
        @foreach (var item in @ViewBag.lib)
        {
           <div class="div3">
                <div class="div4"><p><a id="menu1"href="">@item.titulo</a></p>
                </div>
                <div class="div5">
                     @{string img = "~/Content/Imagenes/" + @item.portada;}<img src="@Url.Content(img)" width="200" height="200"/><p class="pp">Categoria:  @item.tipo</p>
                     <div>@{string img2 = "~/Content/Imagenes/estrella.jpg";}<img src="@Url.Content(img2)" width="30" height="30"/>@item.puntaje</div>
                </div>
                <div class="des" style="height:350px;overflow:scroll;">
                    <div class="u">@item.descripcion</div>
                </div>
           </div>
        }
        </div> 
    </div>   
    <div class="div6">
        @foreach (var ite in @ViewBag.lib)
        {
            <div class="div7">
            <div>
                <div class="g"style="float:left;">@{string img = "~/Content/Imagenes/" + @ite.portada;}<img src="@Url.Content(img)" width="100" height="100"/></div>
                <div class="g">
                    <div class="t">@ite.titulo</div><br>
                    <div>@ite.descripcion</div>
                </div>
            </div>
            </div>
        }
    </div>
</div>
