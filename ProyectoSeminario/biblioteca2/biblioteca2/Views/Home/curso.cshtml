<h2>BIENVENIDO AL FORMULARIO DE REGISTRO DE CURSOS</h2>
<form enctype="multipart/form-data" method="post" action="@Url.Action("curso","curso")">
        <fieldset>
            <legend>Registro de Articulo</legend>
            <div class="clearfix">
                @Html.LabelFor(m => m.Titulo)
                <div class="input">
                    @Html.TextBoxFor(m => m.Titulo)
                    @Html.ValidationMessageFor(m => m.Titulo)
                </div>
            </div> 
            
           <div class="clearfix">
                @Html.LabelFor(m => m.Portada)
                <div class="input">
                    <input type="file" name="Portada"> 
                    @Html.ValidationMessageFor(m => m.Portada)
                </div>
            </div>
              
            <div class="clearfix">
                @Html.LabelFor(m => m.Categoria)
                <div class="input">
                    @Html.TextBoxFor(m => m.Categoria)
                    @Html.ValidationMessageFor(m => m.Categoria)
                </div>
            </div>
                
             <div class="editor-label">
                @Html.LabelFor(model => model.Descripcion)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Contenido, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
            
            
            <div class="actions">
                <input type="submit" class="btn primary" value="Guardar" />
                <input type="button" class="btn" value="Cancelar" />
            </div>
        </fieldset>   
</form>