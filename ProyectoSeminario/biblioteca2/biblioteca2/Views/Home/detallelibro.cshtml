@if (ViewBag.comentario != null)
{
    <div>
         @foreach (var c in ViewBag.comentario)
         { 
            <dl>
		        <dt><a href="#Section1">@c.nombre __ @c.apellido</a></dt>
		        <dd id="Section1">
			    <p style="float:left;">
                    @{string img2 = "~/Content/Imagenes/" + @c.avatar;}<img src="@Url.Content(img2)" width="100" height="100"/>
