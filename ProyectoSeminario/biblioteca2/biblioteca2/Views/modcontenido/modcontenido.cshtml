<h2 class="tit">MODERADOR DE CONTENIDOS</h2>

<div class="coment">
<div class="usuario1">
    <div>
    <p class="fech">PUBLICACIONES</p>
       @foreach (var ct in ViewBag.pub)
       {
           <div>
           <a href="http://localhost:4391/modcontenido/modcontenido/@ct.idPublicacion">@{string img = "~/Content/Imagenes/" + @ct.portada;}<img src="@Url.Content(img)" width="20" height="20"/></a>
           <a href="http://localhost:4391/modcontenido/modcontenido/@ct.idPublicacion">@ct.fecha_publicacion<br/></a>
           </div>
       }
    </div>     
</div>
@if (ViewBag.publi != null)
{
<div class="tablex">
    @if (ViewBag.publi != null)
    {
      <div class="table">
      
        @foreach (var c in ViewBag.publi)
        {
            <div class="titulo">
                <div>
                    @c.titulo
                </div>
            </div>
            <div style="overflow:hidden;">
                <div style="text-align:center;">
                    <p>Autor:  @ViewBag.libro.autor</p>  <p> Año de Publicado:  @ViewBag.libro.año_publicacion</p>
                    <p>Idioma:  @ViewBag.libro.idioma</p><p> Tamaño:  @ViewBag.libro.tamaño</p>
                </div>
                <div class="cuerpo1" >
                    @{string img1 = "~/Content/Imagenes/" + @c.portada;}<img src="@Url.Content(img1)" width="100" height="100"/><br/>
                    <div style="background-color:black;">
                Descripcion del libro:<br>
                    @c.descripcion
                </div>
                </div>
                
                <div>
                    <iframe src="/Content/ArchivoPDF/@c.contenido" width="500" height="500"></iframe>
                </div>
                <div style="margin-left:20px;">
                Publicado el:    @c.fecha_publicacion
                </div>
            </div>
           <div style="background-color:Black;">
            <a href="http://localhost:4391/modcontenido/corregidol/@c.idPublicacion">@{string img3 = "~/Content/Images/acept.jpg";}<img src="@Url.Content(img3)" width="150" height="50" style="border-radius:10px;margin-left:50px;"/></a>
            <a href="http://localhost:4391/modcontenido/corregir/@c.idPublicacion">@{string img2 = "~/Content/Images/reject.jpg";}<img src="@Url.Content(img2)" width="150" height="50" style="border-radius:10px;margin-left:50px;"/></a> 
           </div>
        }
      </div>
      
    }
    else
    {
    <h3>@ViewBag.error</h3>
    }
</div>

}

</div>