            @foreach(var p in @ViewBag.datos){
                <div>
                    <div>@{string img1 = "~/Content/imagenes/" + @p.avatar;}<img src="@Url.Content(img1)" width="100" height="100" style="-moz-border-radius:10px;"/></div><br><div>@p.nombre   @p.apellido</div>
                </div>
                
            }
        </div>
        <div>
        @foreach(var pr in @ViewBag.perfil){
            <div>
                    <h2 style="color:White;">Karma: @pr.karma</h2><br>
                    <h2 style="color:White;">Infraccion: @pr.infraccion</h2><br> 
                    <h2 style="color:White;">Autorizacion Bloqueado?: @pr.beneado</h2> 
              </div>
        }
        </div>
    
        
	</div>
    
    <div class="tabsContent">
            <div class="tab">
                <h2 style="color:White;">Detalle de Curso</h2>
				<p>Este contenido solo es detalle de Curso.</p>
                <p>Las correcciones => true son publicadas.</p>
