                {
          	        <div style="border:3px solid #FF00FF;margin:20px;padding:20px;background-color:Black;">
                        <div class="tit">@item.titulo</div>
                        <div>
                        <div>@Html.Raw(@item.contenido)</div>
                         <div>@item.descripcion</div>
                        <div>Publicado: @item.fecha_publicacion</div>
                        <div>Correcciones: @item.correcciones</div>
                        <div>Puntaje: @item.puntaje</div>
                        </div>
                    </div>
                }
				</div>
            </div>
            
    </div>
        
</div>
