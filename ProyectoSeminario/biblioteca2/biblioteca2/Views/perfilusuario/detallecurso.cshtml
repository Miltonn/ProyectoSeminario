@{
    ViewBag.Title = "detallecurso";
}
@if (@ViewBag.publi != null)
{
<div>
    
	<div style="border:3px solid white;-moz-box-shadow:10px 10px 10px purple;box-shadow:10px 10px 10px purple;margin-left:100px;margin-right:100px;padding:20px;background-color:#C0C0C0;">
		<div style="overflow:hidden;float:left;margin-left:100px;margin-right:100px;border:3px solid purple;-moz-box-shadow:10px 10px 10px purple;box-shadow:10px 10px 10px purple;">
            @foreach(var p in @ViewBag.datos){
                <div>
                    <div>@{string img1 = "~/Content/imagenes/" + @p.avatar;}<img src="@Url.Content(img1)" width="100" height="100" style="-moz-border-radius:10px;"/></div><br><div>@p.nombre   @p.apellido</div>
                </div>
                
            }
        </div>
        <div>
        @foreach(var pr in @ViewBag.perfil){
            <div>
                    <h2 style="color:White;">Karma: @pr.karma</h2><br>
                    <h2 style="color:White;">Infraccion: @pr.infraccion</h2><br> 
                    <h2 style="color:White;">Autorizacion Bloqueado?: @pr.beneado</h2> 
              </div>
        }
        </div>
    
        
	</div>
    
    <div class="tabsContent">
            <div class="tab">
                <h2 style="color:White;">Detalle de Curso</h2>
				<p>Este contenido solo es detalle de Curso.</p>
                <p>Las correcciones => true son publicadas.</p>
                <p>Las correcciones => false no son publicadas.</p>
                <p>Las correcciones => corregir debe corregir.</p>
				<div id="myGallery" class="spacegallery"style="border:3px solid #FF00FF;padding:20px;padding-left:140px;padding-right:140px;background-color:white;height:500px;overflow:scroll;">
					@foreach (var item in @ViewBag.publi)
                {
          	        <div style="border:3px solid #FF00FF;margin:20px;padding:20px;background-color:Black;">
                        <div class="tit">@item.titulo</div>
                        <div>
                        <div>@Html.Raw(@item.contenido)</div>
                         <div>@item.descripcion</div>
                        <div>Publicado: @item.fecha_publicacion</div>
                        <div>Correcciones: @item.correcciones</div>
                        <div>Puntaje: @item.puntaje</div>
                        </div>
                    </div>
                }
				</div>
            </div>
            
    </div>
        
</div>
}
else
{ @ViewBag.publi}


