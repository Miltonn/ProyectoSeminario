@if (@ViewBag.publi != null)
{
<div>
    
	<div style="border:3px solid white;-moz-box-shadow:10px 10px 10px purple;box-shadow:10px 10px 10px purple;margin-left:100px;margin-right:100px;padding:20px;background-color:#C0C0C0;">
