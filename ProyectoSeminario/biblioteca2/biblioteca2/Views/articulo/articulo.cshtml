@model biblioteca2.Models.articulomodelo


@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "emailDialog" }))
{
    // @Html.ValidationSummary(true)

    //@Html.EditorForModel()
}      
  <script src="@Url.Content("~/ckeditor/ckeditor.js")" type="text/javascript"></script>
  <script type="text/javascript" src="../../ckeditor/ckeditor.js"></script>
   <form class="formulario" enctype="multipart/form-data" method="post" action="@Url.Action("articulopublic", "articulo")">
        <fieldset>
            <legend>Registro de Articulo</legend>
            <div class="clearfix">
                @Html.LabelFor(m => m.Titulo)
                <div class="input">
                    @Html.TextBoxFor(m => m.Titulo, new { @class = "texto" })
                    @Html.ValidationMessageFor(m => m.Titulo)
                </div>
            </div> 
            
           <div class="clearfix">
                @Html.LabelFor(m => m.Portada)
                <div class="input">
                    <input type="file" name="Portada" class="texto"> 
                    @Html.ValidationMessageFor(m => m.Portada)
                </div>
            </div>
              
            <div class="clearfix">
                @Html.LabelFor(m => m.Categoria)
                <div class="input">
                    @Html.TextBoxFor(m => m.Categoria, new { @class = "texto" })
                    @Html.ValidationMessageFor(m => m.Categoria)
                </div>
            </div>
             <div class="clearfix">
                @Html.LabelFor(m => m.Descripcion)
                <div class="input">
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "texto" })
                    @Html.ValidationMessageFor(m => m.Descripcion)
                </div>
            </div>  
             <div class="editor-label">
                @Html.LabelFor(model => model.Contenido)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Contenido, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.Contenido)
            </div>
            <p>
                <input type="submit" value="Registrar" class="texto"/>
                
            </p>
        </fieldset>   
</form>
